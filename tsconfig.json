{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "baseUrl": "./src", // This matches your `root: ['./src']` in babel.config.js
    "paths": {
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@screens/*": ["screens/*"],
      "@utils/*": ["utils/*"],
      "@hooks/*": ["hooks/*"],
      "@store/*": ["store/*"],
      "@services/*": ["services/*"],
      "@types/*": ["types/*"]
    }
  }
}
