default_platform(:android)

platform :android do
  desc "Submit a new build to Firebase App Distribution"
  lane :distribute do
    gradle(task: "clean assembleRelease")

    firebase_app_distribution(
      app: "1:577882676291:android:6ffd101b6c7891eaad48f6",
      groups: "testing-group",
      service_credentials_file: "firebase-auth.json",
      release_notes: ENV["RELEASE_NOTES"] || "Manual distribution via Fastlane"
    )
  end
end
