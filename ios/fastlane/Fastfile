default_platform(:ios)

platform :ios do
  desc "Submit a new build to Firebase App Distribution"
  lane :distribute do
    bundle_id = "com.vrinsoft.rnstructure"
    # 1. Load and Normalize API Key Content
    # We support either raw PEM or Base64 encoded PEM (recommended for CI)
    key_content = ENV["APP_STORE_CONNECT_API_KEY_CONTENT"]
    
    if key_content.nil? || key_content.empty?
      UI.user_error!("APP_STORE_CONNECT_API_KEY_CONTENT is missing from environment variables.")
    end

    # Detect and handle Base64
    if !key_content.include?("BEGIN PRIVATE KEY") && key_content.match?(/^[a-zA-Z0-9+\/=\s]+$/)
      begin
        require "base64"
        decoded = Base64.decode64(key_content.gsub(/\s+/, ""))
        if decoded.include?("PRIVATE KEY")
          key_content = decoded
          UI.message("Successfully decoded Base64 API key content.")
        end
      rescue
      end
    end

    # Clean up any potential \n strings or stray whitespace
    key_content = key_content.gsub("\\n", "\n").strip

    # Diagnostic: Show first 20 chars to confirm it looks like a PEM
    UI.message("Loading API Key ID: #{ENV["APP_STORE_CONNECT_API_KEY_ID"]}")
    UI.message("API Key Content starts with: #{key_content[0..25]}...")

    # Authenticate with Apple Store Connect
    api_key = app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_API_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_API_KEY_ISSUER_ID"],
      key_content: key_content,
      duration: 1200,
      in_house: false
    )

    # 2. Manual Code Signing (The only way that works 100% on CI)
    # We stop trying to "fetch" from Apple (which fails because of missing private keys).
    # Instead, we use the Certificate (.p12) and Profile you provide.
    
    cert_path = File.expand_path("temp_cert.p12")
    profile_path = File.expand_path("temp_profile.mobileprovision")
    
    # helper to save base64 to file
    def save_base64_to_file(env_val, path)
      return false if env_val.nil? || env_val.empty?
      begin
        decoded = Base64.decode64(env_val.gsub(/\s+/, ""))
        File.write(path, decoded)
        UI.message("Saved Base64 content to: #{path} (Size: #{decoded.length})")
        return File.exist?(path)
      rescue => e
        UI.error("Failed to decode or write Base64: #{e.message}")
        return false
      end
    end

    if save_base64_to_file(ENV["IOS_CERT_P12"], cert_path)
      UI.message("Importing manual certificate from #{cert_path}...")
      import_certificate(
        certificate_path: cert_path,
        certificate_password: ENV["IOS_CERT_PASSWORD"],
        keychain_name: "build.keychain"
      )

      # IMPORTANT: Allow codesign to access the imported key without a prompt
      # This is the most common reason for "Error building" in CI
      begin
        sh "security set-key-partition-list -S apple-tool:,apple:,codesign: -s -k '' build.keychain"
        UI.message("Successfully granted codesign access to keychain.")
      rescue => e
        UI.error("Failed to set keychain partition list: #{e.message}")
      end
    else
      UI.user_error!("IOS_CERT_P12 secret is missing or could not be written! STOPPING.")
    end

    if save_base64_to_file(ENV["IOS_PROVISION_PROFILE"], profile_path)
      UI.message("Installing manual provisioning profile...")
      # Ensure the directory exists
      profile_dir = File.expand_path("~/Library/MobileDevice/Provisioning Profiles")
      FileUtils.mkdir_p(profile_dir)
      
      # Copy to the standard location Xcode expects
      # We use the UUID if possible, but copying by filename is a starting point
      # Better: use the filename specified in the project if known, or just a generic one
      dest_path = File.join(profile_dir, File.basename(profile_path))
      FileUtils.cp(profile_path, dest_path)
      UI.message("Provisioning profile installed to #{dest_path}")
    else
      UI.important("IOS_PROVISION_PROFILE secret is missing.")
    end

    profile_name = ENV["IOS_PROVISION_PROFILE_NAME"]
    if profile_name.nil? || profile_name.empty?
      UI.error("CRITICAL: IOS_PROVISION_PROFILE_NAME is missing. Build will likely fail.")
    end

    # 3. Identity Auto-Detection
    # We find the exact identity name from the keychain (e.g. "Apple Distribution: ...")
    signing_identity = ""
    begin
      identities = sh("security find-identity -v -p codesigning build.keychain").split("\n")
      # Look for a line that looks like: 1) XXXXXX "Apple Distribution: Name (ID)"
      valid_line = identities.find { |line| line.include?("Apple Distribution") || line.include?("iPhone Distribution") }
      if valid_line
        signing_identity = valid_line.match(/"([^"]+)"/)[1]
        UI.message("Detected Signing Identity: #{signing_identity}")
      else
        UI.user_error!("NO VALID DISTRIBUTION IDENTITY FOUND in keychain. Build will fail.")
      end
    rescue => e
      UI.user_error!("Failed to query identities from keychain: #{e.message}")
    end

    # 4. Global Build Diagnostics (Exhaustive)
    UI.message("--- GLOBAL DIAGNOSTICS START ---")
    begin
      UI.message("Keychain identities:")
      sh "security find-identity -v -p codesigning build.keychain"
      
      profile_dir = File.expand_path("~/Library/MobileDevice/Provisioning Profiles")
      UI.message("Provisioning profiles in #{profile_dir}:")
      sh "ls -la '#{profile_dir}'"
      
      # NEW: Decode and show truths from the profile itself to find the mismatch
      if File.exist?(profile_path)
        UI.message("--- PROMPT: PROFILE DECODED TRUTH ---")
        sh "security cms -D -i #{profile_path} > decoded_profile.plist"
        UI.message("Team ID in Profile:")
        sh "/usr/libexec/PlistBuddy -c 'Print :TeamIdentifier:0' decoded_profile.plist || echo 'Not found'"
        UI.message("App ID in Profile:")
        sh "/usr/libexec/PlistBuddy -c 'Print :Entitlements:application-identifier' decoded_profile.plist || echo 'Not found'"
        UI.message("Profile Name:")
        sh "/usr/libexec/PlistBuddy -c 'Print :Name' decoded_profile.plist || echo 'Not found'"
        UI.message("--- END DECODED TRUTH ---")
      end

      UI.message("Target Identifier: #{bundle_id}")
      UI.message("Target Profile Name: #{profile_name}")
      UI.message("Target Identity: #{signing_identity}")
    rescue => e
      UI.error("Diagnostic check failed: #{e.message}")
    end
    UI.message("--- GLOBAL DIAGNOSTICS END ---")

    # 5. Prepare Xcode for Manual Signing
    # We force the Team ID and identity to avoid any guesswork by Xcode
    team_id = "LF3KD8T45S"
    
    UI.message("Applying code signing settings for Team: #{team_id} and Identity: #{signing_identity}...")
    update_code_signing_settings(
      use_automatic_signing: false,
      path: "RNBoilerplate.xcodeproj",
      team_id: team_id,
      bundle_identifier: bundle_id,
      code_sign_identity: signing_identity,
      profile_name: profile_name # Explicitly reinforce profile name in project
    )

    # Clear Derived Data to ensure no stale artifacts are causing conflicts
    clear_derived_data(derived_data_path: "build")

    # build_app handles the compilation and export of the IPA
    begin
      build_app(
        scheme: "RNBoilerplate",
        workspace: "RNBoilerplate.xcworkspace",
        configuration: "Release",
        export_method: "ad-hoc",
        output_directory: "build/ios/ipa",
        output_name: "RNBoilerplate.ipa",
        clean: true,
        silent: false,
        verbose: true,
        include_bitcode: false,
        export_development_team: team_id,
        export_options: {
          method: "ad-hoc",
          signingStyle: "manual",
          compileBitcode: false,
          uploadBitcode: false,
          provisioningProfiles: {
            bundle_id => profile_name
          }
        },
        xcargs: [
          "AD_HOC_CODE_SIGNING_ALLOWED=YES",
          "ENABLE_BITCODE=NO",
          "CODE_SIGNING_REQUIRED=YES",
          "CODE_SIGNING_ALLOWED=YES",
          "CODE_SIGN_STYLE=Manual"
        ].join(" ")
      )
    rescue => e
      UI.error("CRITICAL: Build failed. Comprehensive log capture starting...")
      log_files = Dir["/Users/runner/Library/Logs/gym/*.log"]
      latest_log = log_files.max_by { |f| File.mtime(f) }
      
      if latest_log && File.exist?(latest_log)
        UI.message("--- START OF RAW XCODEBUILD LOG (Last 500 lines) ---")
        sh "tail -n 500 '#{latest_log}'"
        UI.message("--- KEY ERROR HIGHLIGHTS ---")
        sh "grep -i 'error:' '#{latest_log}' || echo 'No explicit error lines found'"
        UI.message("--- END OF ERROR HIGHLIGHTS ---")
        
        UI.message("--- DEEP AUDIT: BUILD SETTINGS ---")
        begin
          # We use ../ because Fastlane runs from ios/fastlane, we need to go up to ios/
          sh "xcodebuild -showBuildSettings -workspace ../RNBoilerplate.xcworkspace -scheme RNBoilerplate -configuration Release"
        rescue
          UI.error("Could not fetch build settings for audit.")
        end
        UI.message("--- END DEEP AUDIT ---")
      else
        UI.important("Could not find gym log file to dump.")
      end
      raise e
    end
    
    # Cleanup
    File.delete(cert_path) if File.exist?(cert_path)
    File.delete(profile_path) if File.exist?(profile_path)
    # Note: We keep the profile in ~/Library for the build to use
    
    upload_to_firebase
  end

  desc "Upload existing build to Firebase"
  lane :upload_to_firebase do |options|
    firebase_app_distribution(
      app:  "1:577882676291:ios:9297ddde469c74f8ad48f6",
      groups: "testing-group",
      ipa_path: options[:ipa_path] || "build/ios/ipa/RNBoilerplate.ipa",
      release_notes: "Standard iOS distribution via Fastlane"
    )
  end
end
