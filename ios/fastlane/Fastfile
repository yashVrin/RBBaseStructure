default_platform(:ios)

platform :ios do
  desc "Submit a new build to Firebase App Distribution"
  lane :distribute do
    def normalize_key_content(content)
      return nil if content.nil? || content.empty?
      
      # 1. Handle literal \n as strings (common in GitHub Secrets)
      content = content.gsub("\\n", "\n")
      
      # 2. Check if it's potentially Base64 encoded
      if !content.include?("BEGIN PRIVATE KEY") && content.match?(/^[a-zA-Z0-9+\/=\s]+$/)
        begin
          require "base64"
          decoded = Base64.decode64(content)
          content = decoded if decoded.include?("PRIVATE KEY")
        rescue
          # If decoding fails or doesn't look like a key, keep as is
        end
      end
      
      # 3. Strip any weird whitespace
      content = content.strip
      
      # 4. Fix flattened PEM strings (one line with headers but no internal newlines)
      header = "-----BEGIN PRIVATE KEY-----"
      footer = "-----END PRIVATE KEY-----"
      if content.include?(header) && content.include?(footer)
        # Extract the middle part and remove ALL whitespace/newlines
        inner = content.gsub(header, "").gsub(footer, "").gsub(/\s+/, "")
        # Reconstruct with proper newlines
        content = "#{header}\n#{inner}\n#{footer}"
      end

      content
    end

    # Authenticate with Apple Store Connect
    api_key = app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_API_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_API_KEY_ISSUER_ID"],
      key_content: normalize_key_content(ENV["APP_STORE_CONNECT_API_KEY_CONTENT"]),
      duration: 1200,
      in_house: false
    )

    # Fetch certificates and provisioning profiles
    get_certificates(api_key: api_key)
    get_provisioning_profile(api_key: api_key, ad_hoc: true)

    # build_app handles the compilation and export of the IPA
    build_app(
      scheme: "RNBoilerplate",
      workspace: "RNBoilerplate.xcworkspace",
      configuration: "Release",
      export_method: "ad-hoc",
      output_directory: "build/ios/ipa",
      output_name: "RNBoilerplate.ipa",
      clean: true,
      export_options: {
        method: "ad-hoc",
        compileBitcode: false,
        uploadBitcode: false
      }
    )
    
    upload_to_firebase
  end

  desc "Upload existing build to Firebase"
  lane :upload_to_firebase do |options|
    firebase_app_distribution(
      app:  "1:577882676291:ios:9297ddde469c74f8ad48f6",
      groups: "testing-group",
      ipa_path: options[:ipa_path] || "build/ios/ipa/RNBoilerplate.ipa",
      release_notes: "Standard iOS distribution via Fastlane"
    )
  end
end
